{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hotspot Manager",
  "version": "0.2.1",
  "identifier": "com.hotspot.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Hotspot Manager",
        "width": 760,
        "height": 600,
        "center": true,
        "decorations": false,
        "resizable": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "DWY+your+public+key+here",
      "endpoints": [
        "https://github.com/gunwiggle/hotspot/releases/latest/download/updater.json"
      ]
    }
  }
}